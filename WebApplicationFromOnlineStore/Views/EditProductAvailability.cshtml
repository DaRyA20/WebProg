@model WebApplicationFromOnlineStore.Models.DBProductAvailability

@{
    ViewBag.Title = "EditProductAvailability";
}

<h2>EditProductAvailability</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>DBProductAvailability</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProductAvailabilityId)

        <div class="form-group">
            <p>Модель</p>
            <div class="col-md-10">
                @Html.DropDownListFor(model=> model.ProductAvailability_ProductId, ViewBag.Product as SelectList, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProductAvailability_ProductId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           <p>Наименование точки</p>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ProductAvailability_PremisesId, ViewBag.Premises as SelectList, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProductAvailability_PremisesId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Количество</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductAvailability_ProductCount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProductAvailability_ProductCount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
