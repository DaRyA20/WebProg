@model WebApplicationFromOnlineStore.Models.DBProduct

@{
    ViewBag.Title = "Добавить";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div>
    <h2>Добавить товар</h2>
    <hr />

    <div class="form-group">
        <p>Производитель</p>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ManufacturerIds, ViewBag.ProductsManufacturer as SelectList)
            @Html.ValidationMessageFor(model => model.ManufacturerIds, "", new { @class = "text-danger" })
        </div>
    </div>
    <br>

    <div class="form-group">
        <p>Модель</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
        </div>
    </div>
    <br>
    <br>
    <div class="form-group">
        <p>Категория товара</p>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ProductType, ViewBag.ProductsCategory as SelectList)
            @Html.ValidationMessageFor(model => model.ProductType, "", new { @class = "text-danger" })
        </div>
    </div>
    <br>
    <div class="form-group">
        <p>Стоимость</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ProductPrice, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ProductPrice, "", new { @class = "text-danger" })
        </div>
    </div>
    <br>
    <br>
    <div class="form-group">
        <div>
            <input type="submit" value="Добавить" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Вернуться к списку товаров", "IndexProduct")
</div>

