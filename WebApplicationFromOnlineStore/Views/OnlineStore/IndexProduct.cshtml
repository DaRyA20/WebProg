@model IEnumerable<WebApplicationFromOnlineStore.Models.DBProduct>
@{
    ViewBag.Title = "Товар";
}

<h2>Товар</h2>

<p>
    @Html.ActionLink("Добавить товар", "CreateProduct")
</p>
<p>
    @Html.ActionLink("Добавить производителя", "CreateManufacturer")
</p>
<p>
    @Html.ActionLink("Добавить категорию", "CreateCategory")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>Порядковый номер</th>
        <th>Производитель</th>
        <th>Модель</th>
        <th>Категория</th>
        <th>Стоимость</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @item.ProductId
    </td>
    <td>
        @item.Manufacturer.ManufacturerName
    </td>
    <td>
        @item.ProductName
    </td>
    <td>
        @item.Categorys.CategoryName
    </td>
    <td>
        @item.ProductPrice
    </td>
    <td>
        @Html.ActionLink("Редактировать", "EditProduct", new { id = item.ProductId }) |
        @Html.ActionLink("Удалить", "DeleteProduct", new { id = item.ProductId })
    </td>
</tr>
    }
</table>